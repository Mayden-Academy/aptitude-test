<div class="editmodal" dataId="{{id}}">
    <label>Name:</label>
    <input id="firstName" class="editUserData" type="text" name="name" value="{{name}}">
    <label>Email:</label>
    <input id="email" class="editUserData" type="text" name="email" value="{{email}}">
    <label>Time allowed for test:</label>
    <input id="userMinutes" type="number" name="timeMinutes" value="{{timeMinutes}}">
    <input id="userSeconds" type="number" name="timeSeconds" value="{{timeSeconds}}">

    <input id="id" class="editUserData" type="hidden" name="id" value="{{id}}">
    <input id="originalEmail" type="hidden" name="originalEmail" value="{{email}}">
    <input id="time" class="editUserData" type="hidden" name="time">

    <label>Allow retake (tick to allow):</label>
    <input id="canRetake" type="checkbox" {{#if canRetake}}checked{{/if}}>

    <div class="message-target">
        <div id="modal_error" class="alert title_input text-wrap" role="alert"></div>
    </div>

    <button id="editSubmit">Submit changes</button>
</div>